{
  "name": "sample",
  "version": "1.0.0",
  "description": "A sample build",
  "main": "index.js",
  "browserslist": "> 0.25%, not dead",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "babel:main": "npx prettier --write src/js/*.js && webpack --mode production",
    "scss": "npx prettier --write src/css/*.scss && npm-run-all scss:*",
    "scss:sample-css": "sass src/css/sample-css.scss dist/css/sample-css.min.css && npx stylelint src/css/*.scss",
    "stylelint": "npx stylelint src/css/*.scss",
    "build": "npm install && npm run scss && npm run babel:main",
    "watch:babel": "onchange 'src/js/*.js' -- npm run babel:main",
    "watch:scss": "onchange 'src/css/*.scss' -- npm run scss && npx stylelint",
    "watch:prettier": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "watch": "npm-run-all --parallel watch:*"
  },
  "author": "Theresa Newman",
  "license": "ISC",
  "keywords": [],
  "devDependencies": {
    "@babel/cli": "^7.25.6",
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.4",
    "babel-loader": "^9.1.3",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-webpack-plugin": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.3.3",
    "sass": "^1.78.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
